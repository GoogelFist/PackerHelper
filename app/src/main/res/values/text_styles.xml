<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat" />

    <!--  MontserratMedium  -->

    <style name="Text.MontserratMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Text.MontserratMedium.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.MontserratMedium.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.MontserratMedium.14.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.MontserratMedium.14.Nobel">
        <item name="android:textColor">@color/nobel</item>
    </style>

    <style name="Text.MontserratMedium.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.MontserratMedium.16.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--      MontserratSemiBold  -->

    <style name="Text.MontserratSemiBold">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="Text.MontserratSemiBold.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.MontserratSemiBold.10.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  MontserratRegular  -->

    <style name="Text.MontserratRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Text.MontserratRegular.12">
        <item name="android:textSize">12sp</item>
    </style>

</resources>